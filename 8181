-- 创建开关函数
local function createToggle(text, y, default)
	local frame = Instance.new("Frame", main)
	frame.Size = UDim2.new(0,350,0,38)
	frame.Position = UDim2.new(0,15,0,y)
	frame.BackgroundTransparency = 1

	local label = Instance.new("TextLabel", frame)
	label.Size = UDim2.new(0,200,1,0)
	label.BackgroundTransparency = 1
	label.Text = text
	label.TextColor3 = Color3.new(1,1,1)
	label.Font = Enum.Font.Gotham
	label.TextSize = 16
	label.TextXAlignment = Enum.TextXAlignment.Left

	local btn = Instance.new("TextButton", frame)
	btn.Size = UDim2.new(0,85,0,34)
	btn.Position = UDim2.new(1,-90,0,2)
	btn.BackgroundColor3 = default and Color3.fromRGB(0,200,0) or Color3.fromRGB(70,70,70)
	btn.Text = default and "开" or "关"
	btn.TextColor3 = Color3.new(1,1,1)
	btn.Font = Enum.Font.GothamBold
	btn.TextSize = 16
	btn.BorderSizePixel = 0
	btn.AutoButtonColor = false
	Instance.new("UICorner", btn).CornerRadius = UDim.new(0,17)
	return btn
end

local rockToggle = createToggle("岩石 (Rock)", 115, true)
local coreToggle = createToggle("核心 (Core)", 155, false)
local veinToggle = createToggle("矿脉 (Vein)", 195, false)
local orbitToggle = createToggle("环绕模式", 235, false)

