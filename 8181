local miniBtn = Instance.new("TextButton", sg)
miniBtn.Size = UDim2.new(0, 65, 0, 65)
miniBtn.Position = UDim2.new(1, -80, 1, -80)
miniBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
miniBtn.Text = "⛏️"
miniBtn.TextColor3 = Color3.new(1, 1, 1)
miniBtn.Font = Enum.Font.GothamBold
miniBtn.TextSize = 35
miniBtn.ZIndex = 100
miniBtn.BorderSizePixel = 0
miniBtn.AutoButtonColor = false
Instance.new("UICorner", miniBtn).CornerRadius = UDim.new(1, 0)
local miniStroke = Instance.new("UIStroke", miniBtn)
miniStroke.Color = Color3.new(1, 1, 1)
miniStroke.Thickness = 3

-- 关键：每次打开都自动拉回屏幕内
miniBtn.MouseButton1Click:Connect(function()
	main.Visible = not main.Visible
	miniBtn.Text = main.Visible and "✕" or "⛏️"
	if main.Visible then
		clampFrameToScreen()  -- 保证永远在屏幕内
	end
end)

closeBtn.MouseButton1Click:Connect(function()
	main.Visible = false
	miniBtn.Text = "⛏️"
end)

