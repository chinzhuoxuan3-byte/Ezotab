-- ==================== 手机完美适配：自动拉回屏幕内 ====================
local function clampFrameToScreen()
	local screenSize = workspace.CurrentCamera.ViewportSize
	local guiSize = main.AbsoluteSize
	local maxX = screenSize.X - guiSize.X - 20
	local maxY = screenSize.Y - guiSize.Y - 20
	local pos = main.Position
	local clampedX = math.clamp(pos.X.Offset, 20, maxX)
	local clampedY = math.clamp(pos.Y.Offset, 20, maxY)
	main.Position = UDim2.new(pos.X.Scale, clampedX, pos.Y.Scale, clampedY)
end

-- 横竖屏切换自动适配
workspace.CurrentCamera:GetPropertyChangedSignal("ViewportSize"):Connect(function()
	if main.Visible then
		clampFrameToScreen()
	end
end)

-- ==================== 拖动系统（仅标题栏） ====================
local dragging = false
local dragStart = nil
local startPos = nil

local dragArea = Instance.new("Frame", main)
dragArea.Size = UDim2.new(1,-50,0,40)
dragArea.Position = UDim2.new(0,0,0,0)
dragArea.BackgroundTransparency = 1
dragArea.ZIndex = 2

dragArea.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		dragging = true
		dragStart = input.Position
		startPos = main.Position
	end
end)

uis.InputChanged:Connect(function(input)
	if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
		local delta = input.Position - dragStart
		main.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
	end
end)

uis.InputEnded:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		dragging = false
	end
end)

-- ==================== 速度滑块 ====================
local sliding = false
local function getPercent(pos)
	local x = pos.X - slider.AbsolutePosition.X
	local width = slider.AbsoluteSize.X
	return math.clamp(x / width, 0, 1)
end

local function updateSpeedUI()
	local percent = miningSpeedValue / 60
	fill.Size = UDim2.new(percent,0,1,0)
	knob.Position = UDim2.new(percent,-22.5,0.5,-22.5)
	local speedText = miningSpeedValue <= 10 and "极快" or miningSpeedValue <= 25 and "快速" or miningSpeedValue <= 40 and "中速" or "慢速"
	local color = miningSpeedValue <= 10 and Color3.fromRGB(0,255,0) or miningSpeedValue <= 25 and Color3.fromRGB(100,255,0) or miningSpeedValue <= 40 and Color3.fromRGB(255,200,0) or Color3.fromRGB(255,100,100)
	fill.BackgroundColor3 = color
	speedLabel.Text = "速度: "..miningSpeedValue.." ("..speedText..")"
end

sliderContainer.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		sliding = true
		local p = getPercent(input.Position)
		miningSpeedValue = math.floor(p * 60)
		updateSpeedUI()
	end
end)

knob.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		sliding = true
	end
end)

uis.InputChanged:Connect(function(input)
	if sliding and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
		local p = getPercent(input.Position)
		miningSpeedValue = math.floor(p * 60)
		updateSpeedUI()
	end
end)

uis.InputEnded:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		sliding = false
	end
end)

updateSpeedUI()

-- ==================== 核心功能 ====================
local currentTween = nil
local miningTask = nil

local function stopAllActions()
	mining = false
	if miningTask then task.cancel(miningTask); miningTask = nil end
	if currentTween then currentTween:Cancel(); currentTween = nil end
	status.Text = "已停止"
	status.TextColor3 = Color3.fromRGB(255,100,100)
	task.wait(1)
	status.Text = "空闲"
	status.TextColor3 = Color3.fromRGB(180,255,180)
end

powerBtn.MouseButton1Click:Connect(function()
	if mining then
		powerBtn.BackgroundColor3 = Color3.fromRGB(220,0,0)
		powerBtn.Text = "关闭"
		stopAllActions()
	else
		mining = true
		powerBtn.BackgroundColor3 = Color3.fromRGB(0,200,0)
		powerBtn.Text = "开启"
		status.Text = "挖矿中..."
		status.TextColor3 = Color3.fromRGB(100,255,100)

		if miningTask then task.cancel(miningTask) end
		miningTask = task.spawn(function()
			while mining do
				mineOre()
				if not mining then break end
				task.wait(0.1)
			end
		end)
	end
end)

local function toggle(btn, key)
	btn.MouseButton1Click:Connect(function()
		if key == "orbit" then
			circling = not circling
			if circling then circleAngle = 0 end
		else
			oreTypes[key] = not oreTypes[key]
		end
		local isOn = (key=="orbit" and circling or oreTypes[key])
		btn.BackgroundColor3 = isOn and Color3.fromRGB(0,200,0) or Color3.fromRGB(70,70,70)
		btn.Text = isOn and "开" or "关"
	end)
end
toggle(rockToggle, "Rock")
toggle(coreToggle, "Core")
toggle(veinToggle, "Vein")
toggle(orbitToggle, "orbit")

local function fly(cf)
	local root = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
	if not root or not mining then return false end
	if currentTween then currentTween:Cancel(); currentTween = nil end
	local dist = (root.Position - cf.Position).Magnitude
	local info = TweenInfo.new(math.max(dist/80, 0.6), Enum.EasingStyle.Sine)
	currentTween = ts:Create(root, info, {CFrame = cf})
	currentTween:Play()
	local completed = false
	local conn = currentTween.Completed:Connect(function() completed = true; currentTween = nil end)
	while not completed and mining do task.wait(0.05) end
	conn:Disconnect()
	if not mining and currentTween then currentTween:Cancel(); currentTween = nil; return false end
	return mining
end

local function isValid(ore)
	if not ore or not ore.Parent then return false end
	local h = ore:FindFirstChild("Health")
	if h and h:IsA("NumberValue") then return h.Value > 0 end
	local ah = ore:GetAttribute("Health")
	if ah ~= nil then return ah > 0 end
	return false
end

local function findNearest()
	local best, bestDist = nil, math.huge
	local root = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
	if not root then return end
	for _, v in workspace:GetDescendants() do
		if v.Name:match("Basalt") and isValid(v) then
			local match = false
			if v.Name:match("Rock") and oreTypes.Rock then match = true end
			if v.Name:match("Core") and oreTypes.Core then match = true end
			if v.Name:match("Vein") and oreTypes.Vein then match = true end
			if match then
				local d = (root.Position - v:GetPivot().Position).Magnitude
				if d < bestDist then best, bestDist = v, d end
			end
		end
	end
	return best
end

function mineOre()
	if not mining then return end
	local ore = findNearest()
	if not ore then
		status.Text = "未找到"
		task.wait(2)
		return
	end

	status.Text = "飞行中..."
	local flySuccess = fly(ore:GetPivot() * CFrame.new(0,6,0))
	if not flySuccess or not mining then return end

	status.Text = "挖掘中..."
	local oreCenter = ore:GetPivot().Position

	while mining and isValid(ore) do
		pcall(function()
			rs.Shared.Packages.Knit.Services.ToolService.RF.ToolActivated:InvokeServer("Pickaxe")
		end)

		if circling then
			circleAngle += math.rad(45)
			local offset = Vector3.new(math.sin(circleAngle)*circleRadius, 6, math.cos(circleAngle)*circleRadius)
			local root = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
			if root then
				root.CFrame = CFrame.lookAt(oreCenter + offset, oreCenter)
			end
		else
			local root = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
			if root then
				root.CFrame = CFrame.lookAt(root.Position, oreCenter)
			end
		end

		local actualDelay = 0.05 + (miningSpeedValue / 60) * 0.95
		task.wait(actualDelay)
	end
end

